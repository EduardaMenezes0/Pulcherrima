<?php
extract($_POST);

date_default_timezone_set('America/Bahia');
$dataHora = date("d/m/Y H:i:s");

if (!isset($b3)) {
    echo "<html>
    <head><title>Cadastro</title></head>
    <b1>PULCHERRIMA<b1>
    <br></br>
    <body>
        <form action='login.php' method='post'>
            Usuário: <input type='text' name='user' required><br/>
            Senha: <input type='password' name='password' required><br/>
            <input type='submit' name='b3' value='Cadastrar'>
        </form>
    </body>
    </html>
";
exit;
}
//cadastro
$senhaCript = md5($password);
$log = fopen("acessos.log", "a");

if(isset($b1)) {
    $teste = fopen($user, "r");
    if($teste){
        fclose($teste);
        echo "Usuário já existe!";
        fwrite($log, "$dataHora - $user: Tentativa de cadastro, mas já existe\n");
        fclose($log);
        exit();
    }

    $arq = fopen($user, "w");
    fwrite($arq, $senhaCript);
    fclose($arq);

    fwrite($log, "$dataHora - $user: Usuário cadastrado\n");
    fclose($log);
    echo "Usuário $user cadastrado com sucesso!";
    header ("Location: loginS.php");
    exit();
}
